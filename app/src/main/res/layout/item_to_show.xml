<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingLeft="16dp"

        >


        <TextView
            android:id="@+id/name_to_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="שם"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gender_to_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="מין"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/name_to_show"/>

        <TextView
            android:id="@+id/id_to_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="תעודת זהות"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/gender_to_show"/>

        <TextView
            android:id="@+id/date_to_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="תאריך לידה"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/id_to_show"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_to_show">


            <TextView
                android:id="@+id/number_to_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="טלפון"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/button_to_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_alignLeft="@id/number_to_show"
               />
        </RelativeLayout>



        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ערוך"
            android:layout_alignParentLeft="true"
            android:background="@color/background"
            android:textColor="@color/edit"
            android:textStyle="bold"
            android:textSize="14sp"/>

    </RelativeLayout>
</LinearLayout>